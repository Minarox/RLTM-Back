{
  "name": "rltm",
  "description": "Rocket League Tournament Manager",
  "author": {
    "name": "Mathis Serrieres Maniecki",
    "email": "contact@minarox.fr",
    "url": "https://minarox.fr/"
  },
  "bugs": {
    "url": "https://github.com/Minarox/RLTM/issues",
    "email": "contact@minarox.fr"
  },
  "homepage": "https://github.com/Minarox/RLTM#readme",
  "readme": "./README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/Minarox/RLTM.git"
  },
  "module": "src/index.js",
  "type": "module",
  "scripts": {
    "build": "bun build --minify --entrypoints src/index.ts --outdir build --target bun",
    "migrate": "bunx drizzle-kit generate --dialect sqlite --schema src/schemas --out database/migrations",
    "seed": "bun run src/seeders/arena.ts; bun run src/seeders/car.ts; bun run src/seeders/tournament.ts",
    "dev": "bun --watch src/index.ts",
    "start": "bun build/index.js",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "^1.1.6",
    "drizzle-kit": "^0.23.1"
  },
  "peerDependencies": {
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@elysiajs/static": "^1.1.0",
    "@elysiajs/stream": "^1.1.0",
    "colors": "^1.4.0",
    "drizzle-orm": "^0.32.1",
    "elysia": "^1.1.5",
    "elysia-compression": "^0.0.7",
    "winston": "^3.13.1"
  }
}
